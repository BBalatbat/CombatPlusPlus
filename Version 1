#include <iostream>
#include <ctime>
#include <cstdlib>
using namespace std;

//Enemy Stats
class Stats
{
  public:
    int HealthStat;
    int AttackStat;
    string EnemyName;

  void attackAction ()
  {
    cout << "The " << EnemyName << " attacks you!" << endl; 
  }
};

//Enemy Generator
void SpawnEnemy ()
{
  int EnemyType;
  srand(time(0));
  EnemyType = rand()%3+1;
  switch (EnemyType)
  {
    case 1:
    {
      Stats Goblin;
      Goblin.HealthStat = 10;
      Goblin.AttackStat = 5;
      Goblin.EnemyName = "Goblin";
    }
    break;
    case 2:
    {
      Stats Orc;
      Orc.HealthStat = 20;
      Orc.AttackStat = 10;
      Orc.EnemyName = "Orc";
    }
    break;
    case 3:
    {
      Stats Dragon;
      Dragon.HealthStat = 30;
      Dragon.AttackStat = 15;
      Dragon.EnemyName = "Dragon";
    }
  }
}


int main() 
{

}
